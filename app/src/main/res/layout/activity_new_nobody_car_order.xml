<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7EEAFBFB"
        tools:context=".NewNobodyCarOrder">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="10dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                <TextView
                        android:id="@+id/address_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="无人车派送地址信息"
                        android:textSize="23sp">

                </TextView>

                <View

                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="75dp"
                        android:layout_marginRight="75dp"
                        android:background="@color/purple_700" />

                <EditText
                        android:id="@+id/name"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="收货人姓名" />

                <EditText
                        android:id="@+id/phone_number_to_send"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="手机号" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="3dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:layout_gravity="center"
                            android:text="货架号:"
                            android:textColor="@color/gray" />

                    <EditText
                            android:id="@+id/Pos1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="—"
                            android:textSize="19sp" />

                    <EditText
                            android:id="@+id/Pos2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="—"
                            android:textSize="19sp" />

                    <EditText
                            android:id="@+id/Pos3"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                        android:id="@+id/detail_address"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:clickable="true"
                        android:paddingLeft="3dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="送货地址:"
                            android:textSize="18sp"
                            android:textColor="@color/gray" />

                    <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent" />

                    <TextView
                            android:id="@+id/detail_address_textview"
                            android:layout_marginRight="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:text="梅苑"
                            android:textStyle="bold" />

                    <ImageButton
                            android:id="@+id/set_adress"
                            android:layout_width="17dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:backgroundTint="#00FFFFFF"
                            android:paddingLeft="0dp"
                            android:paddingTop="0dp"
                            android:paddingRight="0dp"
                            android:paddingBottom="0dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@mipmap/arrow_right"
                            app:tint="@color/teal_700" />
                </LinearLayout>


                <LinearLayout
                        android:id="@+id/set_time_linear"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="3dp">


                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="预约时间:"
                            android:textSize="18sp"
                            android:textColor="@color/gray" />

                    <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="预约  "
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    <TextView
                            android:id="@+id/time_set_is"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="9:00-11:00"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                    <ImageButton
                            android:id="@+id/set_time"
                            android:layout_width="17dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:backgroundTint="#00FFFFFF"
                            android:paddingLeft="0dp"
                            android:paddingTop="0dp"
                            android:paddingRight="0dp"
                            android:paddingBottom="0dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@mipmap/arrow_right"
                            app:tint="@color/teal_700" />


                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                        app:cornerRadius="10dp"
                        android:id="@+id/confirm_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="确认地址" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>